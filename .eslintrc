{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8
    // or 2017
  },
  "env": {
    "node": true,
    "es6": true,
    "es7": true
  },
  "rules": {
    "no-unused-vars": [
      1,
      {
        "vars": "all",
        "args": "after-used"
      }
    ],
    "vars-on-top": 0,
    "semi": 0,
    "no-undef": 2
  }
}
